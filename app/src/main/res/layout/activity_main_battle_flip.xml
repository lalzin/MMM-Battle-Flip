<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/xValue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="battle.mmm.battleflipchallenge.MainBattleFlip">

    <TextView
        android:id="@+id/textBasique2"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="44dp"
        android:text="Valeur de Y"
        app:layout_constraintTop_toBottomOf="@+id/xValueTextActivity"
        tools:layout_editor_absoluteX="157dp" />

    <TextView
        android:id="@+id/yValueTextActivity"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:text="Valeur de Y"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBasique2" />

    <TextView
        android:id="@+id/xValueTextActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Valeur de X"
        app:layout_constraintTop_toBottomOf="@+id/TexteBasic"
        tools:layout_editor_absoluteX="157dp" />

    <TextView
        android:id="@+id/TexteBasic"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:text="Valeur de X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBasique3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Valeur de Z"
        app:layout_constraintTop_toBottomOf="@+id/yValueTextActivity"
        tools:layout_editor_absoluteX="157dp" />

    <TextView
        android:id="@+id/zValueTextActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Valeur de Z"
        app:layout_constraintTop_toBottomOf="@+id/textBasique3"
        tools:layout_editor_absoluteX="157dp" />

    <Button
        android:id="@+id/launcheur"
        android:layout_width="164dp"
        android:layout_height="104dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Lance ta bouteille"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Validator" />

    <TextView
        android:id="@+id/Validator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="NULL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zValueTextActivity" />

</android.support.constraint.ConstraintLayout>
